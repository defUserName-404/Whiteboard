<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="whiteboardApp.NewpageController">
   <top>
      <HBox alignment="CENTER" style="-fx-background-color: BLACK;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" alignment="CENTER" centerShape="false" contentDisplay="CENTER" mnemonicParsing="false" text="Back" />
            <ToolBar style="-fx-background-color: BLACK;">
               <items>
                  <ColorPicker fx:id="colorPicker" promptText="Color">
                     <value>
                        <Color />
                     </value>
                  </ColorPicker>
                  <TextField promptText="Select Size" style="-fx-background-color: WHITE;" />
               </items>
            </ToolBar>
            <Button fx:id="exportButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Export" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox fx:id="canvasHolder" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" height="${canvasHolder.height}" width="${canvasHolder.width}" />
         </children>
      </VBox>
   </center>
</BorderPane>
